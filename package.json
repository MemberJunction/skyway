    "version": "changeset version",
    "publish:packages": "changeset publish"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "vitest": "^4.0.18"
  }
}
